root: true

env:
  browser: true
  node: true

globals:
  define: true

extends:
  "standard"

rules:
  camelcase: [2, { properties: "never" }]
  quotes: [2, "single"]
  "semi": [2, "always"]
  "semi-spacing": [2, { "before": false, "after": true }]
  "indent": [2, "tab", { "SwitchCase": 1 }]
  "no-tabs": "off"
